<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Thumbnail ImageView -->
    <ImageView
        android:id="@+id/ivRockThumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/rock_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Rock Title TextView -->
    <TextView
        android:id="@+id/tvRockTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rock Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/ivRockThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivRockThumbnail"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
